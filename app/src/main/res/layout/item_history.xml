<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/HIS_CELL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <View
                android:id="@+id/HIS_STATE"
                android:layout_width="4dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="#ff0000"></View>

            <View
                android:id="@+id/his_under"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="25dp"
                android:background="#D5D5D5"></View>

            <TextView
                android:id="@+id/HIS_DATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/HIS_STATE"
                android:text="18.12.12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/his_under"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/HIS_STATE"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/HIS_SHOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="스토어" />

                <TextView
                    android:id="@+id/HIS_MONEY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="10,000,000 원" />

                <TextView
                    android:id="@+id/HIS_CARD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="크마카드" />

                <TextView
                    android:id="@+id/HIS_CATEGORY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="분류" />

                <TextView
                    android:id="@+id/HIS_USER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="사용자"/>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>